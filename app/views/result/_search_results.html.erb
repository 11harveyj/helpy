<ul class="list-unstyled">
<% @results.each do |result| %>
  <% if result.searchable_type == "Topic" %>
  <li class="search-result">
    <span class="more-important"><%= link_to result.searchable.name, result.searchable, class: 'lead' %></span><br/>
    <span class="less-important"><%= result.searchable.post_cache.truncate_words(20) %></span><br/><br/>
  </li>
  <% else %>
  <li class="search-result">
    <span class="more-important"><%= link_to result.searchable.title, category_doc_path(result.searchable.category_id, result.searchable_id, class: 'lead') %></span><br/>
    <span class="less-important"><%= result.searchable.body.truncate_words(20) %></span><br/><br/>
  </li>
  <% end %>
<% end %>
<% if @results.total_count == 0 %>
  <li class="text-center verticalness"><%= t(:no_results) %></li>
<% end %>
</ul>
<div class="text-center paginate-links">
  <%= paginate @results, :remote => true %>
</div>
