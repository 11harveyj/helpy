<h2>Edit <%= @forum.name %></h2>

<%= bootstrap_form_for(@forum) do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} -%>
  <%= link_to 'Delete', @forum, data: {confirm: 'Please confirm you really want to DELETE this forum and all discussions'}, method: :delete, class: 'btn btn-danger glyphicon glyphicon-remove less-important' %>
<% end %>
