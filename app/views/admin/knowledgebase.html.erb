<h1>Admin Knowledgebase</h1>
<div class="row">
  <div class="col-md-12">
    <table id="forums">

      <col width="85%">
      <col width="15%">
      <tbody id="categories">
      <%= render partial: 'cat', collection: @categories %>
      </tbody>
    </table>

    <%= bootstrap_form_for(Category.new, layout: :inline, label_errors: true) do |f| %>
      <div class="col-md-10 col-sm-7">
      <%= f.text_field :name, skip_label: true, placeholder:'Enter a name to start creating a new category', class: 'wide-field' %>
      </div>
      <div class="col-md-2 col-sm-2 text-right">
      <%= f.submit "Add" %>
      </div>
    <% end %>

  </div>
</div>
<br/>
