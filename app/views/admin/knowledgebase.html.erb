<script>
$(document).ready(function(){
  $('.toggle-controls').on("click", function(e){
    //get ID
    var id = e.target.id.split('-')[1];
    console.log('ID is ' + id);
    // reveal corresponding id controls
    $('#controls-' + id).removeClass('hidden');
  });
});
</script>

<h1>Content</h1>
<%= render '/admin/knowledgebase_admin_options' %>

<div class="row">
  <div class="col-md-12">
    <table id="forums" class="table-hover">

      <col width="85%">
      <col width="15%">
      <tbody id="categories">
      <tr>
        <td colspan="2" class='tiny-header'>Front Page Categories</td>
      </tr>
      <%= render partial: 'cat', collection: @categories %>

      <% if @nonfeatured.count > 0 %>
        <tr>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td colspan="2" class='tiny-header'>Other Categories</td>
        </tr>
        <%= render partial: 'cat', collection: @nonfeatured %>
      <% end %>
      </tbody>
    </table>

  </div>
</div>
