<% user = user.searchable if params[:q] %>

<tr class="user">
  <td>
    <div class="user-thumbnail pull-left">
      <%= image_tag(user.thumbnail_url, class: 'img-circle', width: '40px') %>
    </div>
  </td>
  <td>
    <span class="more-important"><%= user.name.titleize %></span><br/>
    <span class="less-important">Last Seen: <%= user.last_sign_in_at.nil? ? "Not Lately" : distance_of_time_in_words_to_now(user.last_sign_in_at) + " ago" %></span>
  </td>

  <td></td>
  <td><%= link_to 'Edit', admin_user_path(user) %></td>
  <td><%#= link_to 'Destroy', cat.id.to_s, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
