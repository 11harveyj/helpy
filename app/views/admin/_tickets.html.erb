<div id="user-info">
</div>
<table id="topics" class="forum table-hover">

  <col width="10px">
  <col>
  <col width="10%" class="hidden-xs">

  <tr>
    <th><%= check_box_tag 'check-all' %></th>
    <th>Subject</th>
    <th class="text-right hidden-xs">Last Post</th>
  </tr>
  <tbody>
  <%= render :partial => 'topic', :collection => @topics %>
  </tbody>
</table>
<div class="text-right">
  <%= paginate @topics, remote: true %>
</div>
<div id="multiple-edit">
  <span class="btn-group left-col-dropdown">
    <span class="status dropdown-toggle ticket-control" data-toggle="dropdown" aria-expanded="false">
      Status
    </span>
    <ul class="dropdown-menu ticket-controls" role="menu">
      <li><%= link_to 'Mark Closed', update_ticket_path(change_status: 'closed', status: params[:status]), :remote => true, class: 'multiple-update' %></li>
      <li><%= link_to 'Reopen', update_ticket_path(change_status: 'open', status: params[:status]), :remote => true, class: 'multiple-update' %></li>
      <li><%= link_to 'Mark New', update_ticket_path(change_status: 'new', status: params[:status]), :remote => true, class: 'multiple-update' %></li>
      <li><%= link_to 'Mark Spam', update_ticket_path(change_status: 'spam', status: params[:status]), :remote => true, class: 'multiple-update' %></li>
    </ul>
  </span>

  <span class="status btn-group left-col-dropdown">
    <span class="dropdown-toggle ticket-control" data-toggle="dropdown" aria-expanded="false">
      Assign Agent
    </span>
    <ul class="dropdown-menu ticket-controls" role="menu">
      <% @admins.each do |admin| %>
      <li><%= link_to "#{admin.name.titleize} (#{admin.active_assigned_count})", assign_agent_path(assigned_user_id: admin.id, status: params[:status]), :remote => true, class: 'multiple-update' %></li>
      <% end %>
    </ul>
  </span>

</div>
