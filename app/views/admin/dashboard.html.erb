      <div class="thumbnail">
        <h5 class="category-header text-center"><span class='category-icon glyphicon glyphicon-book'></span><br/><%= link_to "Knowledgebase", admin_knowledgebase_path %><br/></h5>
        <p class="text-center less-important hidden-xs">Add to or Edit your Knowledgebase</p>
      </div>
    </div>
    <div class="topic-box col-md-3 col-sm-4 col-xs-6" data-link="<%= admin_tickets_path %>">
      <div class="dummy"></div>
      <div class="thumbnail">
        <h5 class="category-header text-center"><span class='category-icon glyphicon glyphicon-comment'></span><br/><%= link_to "Discussions", admin_tickets_path %><br/></h5>
        <p class="text-center less-important hidden-xs">Read and Resolve Support Discussions</p>
      </div>
