<h2>Admin Communities <span class="admin-options pull-right">
  <%= link_to t(:new_community, default: "Create New Community"), new_forum_path, class: 'btn btn-primary' %>
</span></h2>

<div class="row">
  <div class="col-md-12">
    <table id="forums" class="table-hover">

      <col width="85%">
      <col width="15%">
      <thead>
        <tr>
          <td colspan="2" class='tiny-header'>Community</td>
        </tr>
      </thead>
      <tbody id="categories">
        <%= render partial: 'admin/forum', collection: @forums %>
      </tbody>
    </table>

  </div>
</div>
