<% title "Activity Report" %>

<div class="report-header row">
  <div class="col-md-12 clearfix">
    <h2>
      <%= t('group_report', site_name: AppSettings['settings.site_name'], default: "Group Report") %>: <%= content_tag :span, @interval.sentence_case, class: 'hidden-sm hidden-xs' %>
      <div class="dropdown pull-right">
        <button class="btn btn-default dropdown-toggle less-important" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <%= @interval.sentence_case %>
          <span class="caret"></span>
        </button>
        <%= render partial: 'admin/reports/date_selector', locals: { path: "admin_group_reports_path" } %>
      </div>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-md-2 reports-nav">
    <%= render partial: 'admin/reports/reports_nav' %>
  </div>
  <div class="col-md-10">
    <div class="row">
      <div class="col-md-12">
        <%= bar_chart tickets_by_group(@scoped_stats) %>
        <table width="100%" id="reports">
          <col width="80%">
          <col width="0%">
          <col width="20%">
          <thead>
            <th>Group</th>
            <th>
            <th class="text-right">Tickets</th>
          </thead>
          <%
          @teams.order("name asc").each do |team|
          %>
          <tr>
            <td><span class="more-important"><%= team.name %></span><br/><span class="less-important"></span></td>
            <td></td>
            <td><%= content_tag :h3, @scoped_stats.tagged_with(team.name).count, class: 'pull-right' %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
