<div class="btn-group pull-right hidden-md hidden-lg">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="status">Tickets</span><span class="caret"></span>
  </button>
  <ul class="list-unstyled dropdown-menu" role="menu">
    <li class="tiny-header">
      <%= link_to "New", admin_tickets_path(:status => 'new'), :remote => true %>
      <span class="tiny-header pull-right"><%= @new %></span>
    </li>
    <li class="tiny-header">
      <%= link_to "Active", admin_tickets_path(:status => 'open'), :remote => true %>
      <span class="tiny-header pull-right"><%= @open %></span>
    </li>
    <li class="tiny-header">
      <%= link_to "Open", admin_tickets_path(:status => 'open'), :remote => true %>
      <span class="tiny-header pull-right"><%= @open %></span>
    </li>
    <li class="tiny-header">
      <%= link_to "Assigned to Me", admin_tickets_path(:status => 'assigned', :assigned_user_id => current_user), :remote => true %>
      <span class="tiny-header pull-right"><%= @mine %></span>
    </li>
    <li class="tiny-header">
      <%= link_to "Closed", admin_tickets_path(:status => 'closed'), :remote => true %>
      <span class="tiny-header pull-right"><%= @closed %></span>
    </li>
    <li class="tiny-header">
      <%= link_to "Spam", admin_tickets_path(:status => 'spam'), :remote => true %>
      <span class="tiny-header pull-right"><%= @spam %></span>
    </li>
    <%#= link_to "Create New", admin_tickets_path, class: 'list-group-item' %>
  </ul>
</div>
