<div class="btn-group pull-right hidden-md hidden-lg hidden-sm">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="status">Discussions</span><span class="caret"></span>
  </button>
  <ul class="list-unstyled dropdown-menu" role="menu">
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'pending'), :remote => true do %>
      Waiting
      <span class="tiny-header pull-right"><%= @pending %></span>
      <% end %>
    </li>
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'assigned', :assigned_user_id => current_user), :remote => true do %>
      Mine
      <span class="tiny-header pull-right"><%= @mine %></span>
      <% end %>
    </li>
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'unread'), :remote => true do %>
      Unread
      <span class="tiny-header pull-right"><%= @unread %></span>
      <% end %>
    </li>
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'open'), :remote => true do %>
      Open
      <span class="tiny-header pull-right"><%= @open %></span>
      <% end %>
    </li>
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'assigned', :assigned_user_id => current_user), :remote => true do %>
      Pending
      <span class="tiny-header pull-right"><%= @mine %></span>
      <% end %>
    </li>
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'closed'), :remote => true do %>
      Resolved
      <span class="tiny-header pull-right"><%= @closed %></span>
      <% end %>
    </li>
    <li class="mailbox tiny-header">
      <%= link_to admin_tickets_path(:status => 'spam'), :remote => true do %>
      Spam
      <span class="tiny-header pull-right"><%= @spam %></span>
      <% end %>
    </li>
    <%#= link_to "Create New", admin_tickets_path, class: 'list-group-item' %>
  </ul>
</div>
