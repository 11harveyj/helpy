<tr id="category-<%= cat.id %>">
  <td>
    <span class="more-important">
      <%= link_to cat.name, admin_articles_path(cat.id) %>
    </span><span class="label label-count pull-right"><%= cat.docs.count %></span>

    <br/>
    <%= cat.meta_description %>
  </td>
  <td class="text-right">
    <div class="btn-group">
      <span id="row-<%= cat.id %>" data-toggle="dropdown" aria-expanded="false" class='btn dropdown-toggle glyphicon glyphicon-align-justify'></span>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%= link_to 'Edit', edit_category_path(cat) %></li>
        <li><%= link_to 'Delete', cat, data: {confirm: 'Please confirm you really want to DELETE this, and all articles'}, method: :delete, remote: true, class: 'glyphicon glyphicon-remove less-important' %></li>
        <li><%= link_to "View and Edit #{cat.docs.count} articles ", admin_articles_path(cat.id), class: 'less-important' %></li>
        <li><%= link_to 'New Article', new_category_doc_path(cat) %></li>
      </ul>
    </div>
  </td>
</tr>
