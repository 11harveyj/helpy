<h1><%= "#{@category.name} Articles" %></h1>

<%= render '/admin/knowledgebase_admin_options' %>

<div class="row">
  <div class="col-md-12">
    <table id="forums">
      <col width="85%">
      <col width="15%">
      <% @docs.each do |doc| %>
      <tr>
        <td>
          <span class="more-important"><%= link_to doc.title, edit_category_doc_path(doc.category.id, doc.id)  %> <%= ' - Featured' if doc.front_page == true %></span>
          <br/>
          <span class="less-important">Written <%= doc.created_at.strftime("%m/%d/%Y") %> | Last Updated: <%= doc.updated_at? ? "Not Lately" : distance_of_time_in_words_to_now(doc.updated_at) + " ago" %></span>
        </td>
        <td class="text-right">
          <div class="btn-group">
            <span id="row-<%= doc.id %>" data-toggle="dropdown" aria-expanded="false" class='dropdown-toggle glyphicon glyphicon-align-justify'></span>
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
              <li><%= link_to 'Edit', edit_category_doc_path(doc.category.id, doc.id) %></li>
              <li><%= link_to ' Delete', doc, data: {confirm: 'Please confirm you really want to DELETE this'}, method: :delete, remote: true, class: 'glyphicon glyphicon-remove less-important' %></li>
            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New doc', new_category_doc_path(@category) %>
  </div>
</div>
