<tr class="<%= cycle('even', 'odd') %>">
  <td>
    <span class="more-important">
      <%= link_to topic.name.titleize, admin_ticket_path(topic), :remote => true -%>
    </span>
    <br/><span class="less-important">Started By <%= h topic.user.name %></span>
  </td>
  <td class="less-important"><%= topic.status.titleize %> and <%= " assigned to #{topic.assigned_user.name}" if topic.status == 'open' %></td>
  <td class="less-important"><%= topic.last_post_date.nil? ? "Not Lately" : distance_of_time_in_words_to_now(topic.last_post_date) + " ago" %></td>
</tr>
