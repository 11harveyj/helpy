<tr class="link-row">
  <td class="name">
    <div class="more-important">
      <%= link_to h(forum.name), forum_topics_path(:forum_id => forum) -%>
    </div>

    <div class="less-important">
      <%= h(forum.description) -%>
    </div>
  </td>

  <td class="last_post less-important text-right">
    <div class="btn-group">
      <span id="row-<%= forum.id %>" data-toggle="dropdown" aria-expanded="false" class='dropdown-toggle glyphicon glyphicon-align-justify'></span>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%= link_to 'Edit', edit_forum_path(forum) %></li>
      </ul>
    </div>
  </td>
</tr>
