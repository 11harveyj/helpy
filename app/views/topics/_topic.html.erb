<tr class="<%= cycle('even', 'odd') %>">
  <td>
    <span class="more-important"><%= link_to h(topic.name), topic_posts_path(topic) -%></span>
    <br/><span class="less-important">Started By <%= h topic.user.login %></span>
  </td>
  <td><%#= image_tag("icons/001_42.png", :class => 'icon') if topic.private? %></td>
  <td><%#= topic.status %></td>
  <td class="less-important"><%= topic.posts_count - 1 %></td>
  <td class="less-important"><%= topic.last_post_date.nil? ? "Not Lately" : distance_of_time_in_words_to_now(topic.last_post_date) + " ago" %></td>
</tr>
