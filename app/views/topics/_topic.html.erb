<tr class="link-row">
  <td>
    <span class="more-important"><%= link_to h(topic.name.titleize), topic_posts_path(topic) -%></span>
    <br/><span class="less-important">Started By <%= h topic.user.name.titleize %></span>
  </td>
  <td class="less-important text-right"><%= topic.last_post_date.nil? ? "Not Lately" : distance_of_time_in_words_to_now(topic.last_post_date) + " ago" %></td>
</tr>
