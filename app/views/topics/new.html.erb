<div class="add-form">
<%= bootstrap_form_for(@topic) do |f| -%>

  <%= f.alert_message "Please fix the errors below." %>

  <%= f.collection_select(:forum_id, Forum.all, :id, :name, label: 'Category') %>
  <%= f.check_box(:private, label: "Open Private Ticket?") if Settings.tickets %>
  <%= f.text_field :name, :size => 40, label: 'Subject' -%>
  <%= text_area :post, :body, :rows => 8, :cols => 60, label: 'Message' -%>

  <!--<label>Tags:</label><br/>-->
  <%#= text_field_tag :tags %>

  <%= f.submit 'Start Topic' %>
<% end -%>
</div>
