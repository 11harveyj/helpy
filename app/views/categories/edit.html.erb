<h1>Editing category</h1>

<%#= form_for :category, :url => category_path, method: 'patch' do |f| %>
<%= form_for @category do |f| %>

  <%#= error_messages_for :category %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :section %><br />
    <%= f.text_field :section %>
  </p>

  <p>
    <%= f.label :keywords %><br />
    <%= f.text_field :keywords %>
  </p>
  <p>
    <%= f.label :title_tag %><br />
    <%= f.text_field :title_tag %>
  </p>
  <p>
    <%= f.label :meta_description %><br />
    <%= f.text_field :meta_description %>
  </p>

  <p>
    <%= f.label :front_page %><br />
    <%= f.check_box :front_page %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.label :rank %><br />
    <%= f.text_field :rank %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', category_path(id: @category.id) %> |
<%= link_to 'Back', categories_path %>
