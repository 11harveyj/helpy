<h2>Edit Document: <%= @doc.title %></h2>
<%= bootstrap_form_for :doc, url: category_doc_path(@category,@doc), :method => 'patch' do |f| %>

  <%= f.text_field :title %>
  <%= f.text_area(:body, :width => '100%', :height => '400px') %>
  <%= f.text_field :meta_description %>
  <%= f.text_field :title_tag %>
  <%= f.text_field :keywords %>
  <%#= f.select(:doc, :category_id, @categories, :id, :name, {label: "Category"}) %>
  <%= f.select("category_id", Category.all.collect {|c| [ c.name, c.id ] }) %>

  <%= f.text_field :rank %>
  <%= f.check_box :active %>
  <%= f.check_box :front_page %>
  <%= f.submit "Save Changes", :class => 'submit' %>

<% end %>
