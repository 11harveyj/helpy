<%= f.text_field :title %>
<%= f.select("category_id", Category.all.collect {|c| [ c.name, c.id ] }, include_blank: t(:select_category, default: 'Select Category')) %>
<%= render 'admin/article_editor' %>
<%= f.hidden_field :body %>
<hr/>
<% unless Cloudinary.config.cloud_name.nil? %>
<div class="doc-form-files">
  <h4 class="form-subhead">Upload Images:</h4>
  <%#= attachinary_file_field_tag 'doc[screenshots]', @doc, :screenshots %>
  <%= cl_image_upload_tag(:image_id) %>
</div>
<% end %>
<hr/>
<h4 class="form-subhead">Additional Settings:</h4>
<%= f.text_field :meta_description %>
<%= f.text_field :title_tag %>
<%= f.text_field :keywords %>

<%= f.text_field :rank %>
<%= f.check_box :front_page, inline: true %><br/><br/>
<hr/>
<%= f.form_group :active, label: { text: "Article Status: " } do %>
  <%= f.radio_button :active, true, label: "Published", inline: true %>
  <%= f.radio_button :active, false, label: "Draft", inline: true %>
<% end %>
<%= f.submit "Save Changes", class: 'btn btn-warning' %>
