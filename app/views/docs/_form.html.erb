  <% unless Cloudinary.config.cloud_name.nil? %>
  <div class="doc-form-files">
    <h4 class="form-subhead">Upload Images:</h4>
    <%#= attachinary_file_field_tag 'doc[screenshots]', @doc, :screenshots %>
    <%= cl_image_upload_tag(:image_id) %>
  </div>
  <% end %>
