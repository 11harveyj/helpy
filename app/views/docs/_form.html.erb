  <%= f.text_field :title_tag, :label => I18n.translate("activerecord.attributes.doc.title_tag", locale: I18n.default_locale) %>
  <%= f.text_field :keywords, :label => I18n.translate("activerecord.attributes.doc.keywords", locale: I18n.default_locale) %>

